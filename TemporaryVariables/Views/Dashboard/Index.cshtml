@model IEnumerable<TemporaryVariables.Models.Member>

<h2><b>LEADERBOARD</b></h2>

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            <!--@Html.DisplayNameFor(model => model.Points)-->
            @Html.ActionLink("Points", "Index", new { sortOrder = ViewBag.IntSort })
        </th>
        <th>

        </th>
        <th>
            Summary
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/images/batman.gif" class="img-responsive" height="20" width="30" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Points)
        </td>
        <td>
            <!-- max is 1st place points -->
            <progress  style="width: 600px; height: 20px;" value=@Html.DisplayFor(modelItem => item.Points) max="150"></progress>
        </td>
        <td>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownListFor(m => item.CardAndPoints, new SelectList(
         new List<Object>
         {
                        new { value = 0 , text = "705655 (3)"},
                        new { value = 1 , text = "723452 (1)"},
                        new { value = 2,  text = "Planned team outing (3)"},
                        new { value = 3 , text = "725132 (5)"},
                        new { value = 4 , text = "Volunteer : Blood Drive (5)"},
                        new { value = 5,  text = "712352 (5)"},
                        new { value = 6,  text = "712222 (10)"}
         },
         "value",
         "text",
         0))
                </div>
            </div>
        </td>
        <td>
            <a href="http://inside.nwie.net" class="btn bootpopup" title="This is title" target="popupModal2" data-toggle="modal">Go to</a>
            <div id="popupModal2" class="modal hide fade" tabindex="-1" role="dialog">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h3>Title</h3>
                </div>
                <div class="modal-body">
                    <iframe src="" style="zoom:0.60" frameborder="0" height="250" width="99.6%"></iframe>
                </div>
                <div class="modal-footer">
                    <button class="btn" data-dismiss="modal">OK</button>
                </div>
            </div>
        </td>
    </tr>
}
</table>
<img src="~/images/teamTotalPoints.jpg" width="400"/>
<img src="~/images/strengthsPie.png" width="400"/>
<img src="~/images/dashboardStrengths.png"/>